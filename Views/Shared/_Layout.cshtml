<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@(ViewBag.Title != null ? ViewBag.Title + " | ": null)Deploy</title>
    <link href="@Url.Content("~/content/main.css")" rel="stylesheet" type="text/css" />
</head>

<body>
    <ul id="nav">
        <li>@Html.ActionLink("apps", "index", new { controller = "home" })</li>
        @if(User.Identity.IsAuthenticated) {
        <li>@Html.ActionLink("home", "logout", new { controller = "home" })</li>
        }
    </ul>
    @if(TempData["flash"] != null) {
        <div id="flash">@Html.Raw(TempData["flash"] as string)</div>
    }
    @RenderBody()
</body>
</html>
